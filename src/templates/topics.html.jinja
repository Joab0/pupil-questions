{% extends 'components/layout.html.jinja' %}
{% from 'macros/icon.html.jinja' import icon %}

{% block content %}
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="{{ url_for('home') }}">Inicio</a>
      </li>
      <li class="breadcrumb-item active" aria-current="page">Questões</li>
    </ol>
  </nav>

  {# Create topic modal #}
  <div
    class="modal fade"
    id="create-topic-modal"
    tabindex="-1"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5">Criar Questões</h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
          ></button>
        </div>

        <div class="modal-body">
          <form
            action="{{ url_for('post_topics') }}"
            method="post"
            id="create-topic-form"
          >
            <div class="mb-3">
              <label for="topic-name" class="form-label">Tópico</label>
              <input
                type="text"
                name="name"
                id="topic-name"
                class="form-control"
                maxlength="100"
                minlength="2"
                placeholder="O nome do tópico (ex: Questões para a prova)"
                autocomplete="on"
                required
              />
            </div>

            <div class="mb-3">
              <label for="topic-details" class="form-label"
                >Descrição (opcional)</label
              >
              <textarea
                type="text"
                name="description"
                id="topic-description"
                class="form-control"
                minlength="10"
                maxlength="2048"
                rows="3"
                placeholder="Descreva brevemente o conteúdo ou objetivo deste tópico (ex: Questões para prova de matemática, focando em álgebra e geometria)"
              ></textarea>
            </div>
          </form>
        </div>

        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Fechar
          </button>

          <button
            type="submit"
            class="btn btn-primary"
            form="create-topic-form"
          >
            Criar Questões
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Suas Questões</h2>
    <button
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#create-topic-modal"
    >
      Criar Questões
    </button>
  </div>

  {% if not topics %}
    <p>Você ainda não possui questões.</p>
  {% else %}
    <div class="row row-cols-1 row-cols-md-4 g-4">
      {% for topic in topics %}
        <div class="col">
          <div class="card shadow" style="min-height: 200px;">
            <div class="card-body d-flex flex-column">
              <span>
                <h5>{{ topic.name }}</h5>
                <p>{{ topic.description }}</p>
              </span>

              <a
                href="{{ url_for('get_topic', id=topic.id) }}"
                class="btn btn-primary mt-auto"
              >
                Ver Questões
              </a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
{% endblock %}
